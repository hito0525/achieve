<h3>以下の内容で、宜しいでしょうか？</h3>

<%= form_for(@contact) do |f| %>

<!-- 'f.hidden_field'を使用して、リクエストパラメーターに値をしています。 -->

  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>


<p>お名前:<%= @contact.name %></p>
<p>Email:<%= @contact.email %></p>
<p>お問い合わせ内容:<%= @contact.content %></p>

<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= f.submit "送信" , class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :content %>
<%= f.submit "戻る", class: 'btn btn-default btn-block' %>
<% end %>

</div>
</div>





