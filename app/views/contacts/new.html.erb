<p id="notice"><%= notice %></p>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
<% if @contact.errors.any? %>
<div id = "error_explanation">
  <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @contact.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>



<div class="field">
<%= f.label :name %><br>
<%= f.text_field :name %>
</div>

<div class="field">
<%= f.label :email %><br>
<%= f.text_field :email %>
</div>

<div class="field">
<%= f.label :content %><br>
<%= f.text_area :content %>
</div>

<div class="field">
<%= f.submit %>
</div>

<% end %>
