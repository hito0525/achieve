<p id="notice"><%= notice %></p>
<%= form_for(@blog, url: choose_new_or_edit ) do |f| %>
<p>投稿者名：<%= @blog.user.name%> 投稿者ID：<%= @blog.user.id%> </p>

  <%= f.error_messages! %>

  <div class="field">
  <%= f.label :title %> <br>
  <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
  <%= f.label :content %> <br>
  <%= f.text_area :content, class: 'form-control' %>
  </div>

  <br>

  <div class="actions">
  <%= f.submit  '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
</div>
<%= link_to "ブログ一覧画面にもどる", blogs_path %>

